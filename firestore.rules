rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Trips collection
    match /trips/{tripId} {
      // Allow read if user owns the trip
      allow read: if isOwner(resource.data.userId);

      // Allow create if user is authenticated and setting their own userId
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;

      // Allow update if user owns the trip and not changing userId
      allow update: if isOwner(resource.data.userId) &&
                      request.resource.data.userId == resource.data.userId;

      // Allow delete if user owns the trip
      allow delete: if isOwner(resource.data.userId);
    }

    // Expenses collection
    match /expenses/{expenseId} {
      // Allow read if user owns the expense
      allow read: if isOwner(resource.data.userId);

      // Allow create if user is authenticated and setting their own userId
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;

      // Allow update if user owns the expense and not changing userId
      allow update: if isOwner(resource.data.userId) &&
                      request.resource.data.userId == resource.data.userId;

      // Allow delete if user owns the expense
      allow delete: if isOwner(resource.data.userId);
    }
  }
}
